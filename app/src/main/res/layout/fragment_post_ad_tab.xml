<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_light"
        android:orientation="vertical">


        <com.arsalan.garage.uicomponents.CustomTextViewEnglish
            android:id="@+id/textview_offer1"
            style="@style/TextViewStyle.SemiBold.English"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="@string/ad_limit_message"
            android:textColor="@android:color/white"
            android:textSize="15dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/linear_layout_add_view_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

                <include
                    android:id="@+id/button_first_img"
                    layout="@layout/layout_add_image"/>

                <include
                    android:id="@+id/button_second_img"
                    layout="@layout/layout_add_image"/>

                <include
                    android:id="@+id/button_third_img"
                    layout="@layout/layout_add_image"/>

                <include
                    android:id="@+id/button_fourth_img"
                    layout="@layout/layout_add_image"/>

                <include
                    android:id="@+id/button_fifth_img"
                    layout="@layout/layout_add_image"/>
            </LinearLayout>

        </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="8dp">

            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/spinner_sub_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="15dp">

            <com.arsalan.garage.uicomponents.CustomTextViewEnglish
                android:id="@+id/textview_phone_number"
                style="@style/TextViewStyle.Regular.English"
                android:layout_width="@dimen/title_text_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/title"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
                />

            <EditText
                android:id="@+id/edittext_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_text_border"
                android:paddingLeft="@dimen/edit_text_padding"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="15dp">

            <com.arsalan.garage.uicomponents.CustomTextViewEnglish
                style="@style/TextViewStyle.Regular.English"
                android:layout_width="@dimen/title_text_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/mobile_no"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
                />

            <EditText
                android:id="@+id/edittext_mobile_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_text_border"
                android:paddingLeft="@dimen/edit_text_padding"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="15dp">

            <com.arsalan.garage.uicomponents.CustomTextViewEnglish
                style="@style/TextViewStyle.Regular.English"
                android:layout_width="@dimen/title_text_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/price"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
                />

            <EditText
                android:id="@+id/edittext_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_text_border"
                android:paddingLeft="@dimen/edit_text_padding"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="15dp">

            <com.arsalan.garage.uicomponents.CustomTextViewEnglish
                style="@style/TextViewStyle.Regular.English"
                android:layout_width="@dimen/title_text_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Description"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black"
                />

            <EditText
                android:id="@+id/edittext_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_text_border"
                android:paddingLeft="@dimen/edit_text_padding"/>

        </LinearLayout>

        <Button
            android:id="@+id/button_post_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Post Ad"/>
    </LinearLayout>
</ScrollView>