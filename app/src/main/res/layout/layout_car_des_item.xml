<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.arsalan.garage.uicomponents.CustomTextViewEnglish
        android:layout_marginTop="7dp"
        android:id="@+id/textview_description"
        style="@style/TextViewStyle.Regular.English"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/gr_desc_right_margin"
        android:layout_toLeftOf="@+id/textview_year_title"
        android:text="@string/year"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:gravity="right"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider"
        android:background="@drawable/divider"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="7dp"/>

</LinearLayout>
