<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/language_choice"
    tools:context="com.arsalan.garage.activities.LanguageChooserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.arsalan.garage.uicomponents.CustomButton
            android:id="@+id/button_arabic"
            style="@style/TextViewStyle.Regular.English"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:onClick="onEnglishClick"
            android:text="@string/english"
            android:textAllCaps="false"
            android:textColor="@color/app_white"/>

        <com.arsalan.garage.uicomponents.CustomButton
            android:id="@+id/button_english"
            style="@style/TextViewStyle.Regular.English"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:onClick="onArabicClick"
            android:text="@string/arabic_ar"
            android:textAllCaps="false"
            android:textColor="@color/app_white"/>

    </LinearLayout>
</RelativeLayout>
