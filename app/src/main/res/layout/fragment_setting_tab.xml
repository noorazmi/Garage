    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <com.arsalan.garage.uicomponents.CustomTextViewEnglish
            android:id="@+id/language"
            style="@style/SettingTextViewOptions"
            android:drawableLeft="@drawable/language_50"
            android:text="@string/arabic_ar"/>
        <com.arsalan.garage.uicomponents.CustomTextViewEnglish
            android:id="@+id/forgot_password"
            style="@style/SettingTextViewOptions"
            android:drawableLeft="@drawable/forgot_password_50"
            android:text="@string/forgot_password"/>
        <com.arsalan.garage.uicomponents.CustomTextViewEnglish
            android:id="@+id/share"
            style="@style/SettingTextViewOptions"
            android:drawableLeft="@drawable/share_50"
            android:text="@string/share"/>
        <com.arsalan.garage.uicomponents.CustomTextViewEnglish
            android:id="@+id/logout"
            style="@style/SettingTextViewOptions"
            android:drawableLeft="@drawable/logout_50"
            android:text="@string/logout"/>

        <LinearLayout
            style="@style/SettingsPhoneLayoutStyle"
            android:layout_marginTop="40dp">
            <ImageView
                android:id="@+id/whatsapp1"
                style="@style/SettingsPhoneIconLayoutStyle"
                android:src="@drawable/whatsapp"/>
            <com.arsalan.garage.uicomponents.TextViewPhoneCall
                style="@style/CallIconTextViewStyle"
                android:text="+96566440068"/>
        </LinearLayout>
        <LinearLayout
            style="@style/SettingsPhoneLayoutStyle">
            <ImageView
                android:id="@+id/whatsapp2"
