                android:src="@drawable/whatsapp"/>
            <com.arsalan.garage.uicomponents.TextViewPhoneCall
                style="@style/CallIconTextViewStyle"
                android:text="+96599292489"/>
        </LinearLayout>
        <LinearLayout
            style="@style/SettingsPhoneLayoutStyle">
            <ImageView
                android:id="@+id/whatsapp3"
                style="@style/SettingsPhoneIconLayoutStyle"
                android:src="@drawable/whatsapp"/>
            <com.arsalan.garage.uicomponents.TextViewPhoneCall
                style="@style/CallIconTextViewStyle"
                android:text="+96550345710"/>
        </LinearLayout>
        <com.arsalan.garage.uicomponents.CustomTextViewEnglish
            style="@style/TextViewStyle.Regular.English"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="q8motoman@gmail.com"
            android:textColor="@color/phone_number"
            android:textSize="20sp"
            android:textStyle="bold"/>


