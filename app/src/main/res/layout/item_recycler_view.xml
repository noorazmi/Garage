<?xml version="1.0" encoding="utf-8"?>
<com.arsalan.garage.uicomponents.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_bg">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageview_icon"
        android:src="@drawable/autoservice"
        android:scaleType="centerInside"
        android:layout_gravity="center"
        />

    <com.arsalan.garage.uicomponents.CustomTextView
        style="@style/TextViewStyle.Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="السرعه والاداء العالي"
        android:id="@+id/textview_title"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"/>
</com.arsalan.garage.uicomponents.SquareLayout>